<div style="float:left;width:100%">
<%= render 'shared/side_menu' %>
</div>

<br>
<div class="row">
	<div class="span12" style="margin-top:20px;background: white;border-radius: 5px;padding: 10px;width:1050px;margin-left:155px;">
		

		<div class="row">
			<div class="span10 ">
				 <div style="text-align: center;width: 200px;height: 45px;float: left;
line-height: 40px;margin-left: -36px;background-image: url('../assets/ribbonr.jpg');background-size: 200px 100%; color:white;font-weight:bold;">
New Preview
  </div>
       
				<div class = "hero-unit" style="border-radius:5px;margin-top:50px;">
					<table class="table table-hover ">
						<%= form_for @preview do |f| %>
						<%= render 'shared/error_messages', object: f.object %>
						<tr><td><%= f.label :course_id, "Courses" %></td>
							<td>
									<% courses_array = Course.all.map { |course| [course.title, course.id] } %>
							<%= select_tag(:id,options_for_select(courses_array))%>
							</td></tr>
							<tr><td><%= f.label :name, "Title" %></td>
								<td><%= f.text_field :name,:maxlength => 50 %></td></tr>
								<tr><td><%= f.label :desc, "Description" %></td>
									<td><%= f.text_area :desc ,:cols => "30", :rows => "5",:maxlength => 100 %></td></tr>
									<tr><td><%= f.label :video_url, "Video URL" %></td>
										<td><%= f.text_area :video_url ,:cols => "30", :rows => "3" %></td></tr>										
										<tr><td><%= f.label :sequence, "Display Order" %></td>
											<td><%= f.text_field :sequence ,:size => '2' %></td></tr>
											<tr><td><%= f.label :enable, "Show This Preview" %></td>
												<td><%= f.check_box :enable ,:checked => true%></td></tr>
												<tr><td></td><td><%= f.submit "Add Preview", class: "btn btn-large btn-primary" %></td></tr>
											</table>
											<% end %>

										</div>
									</div>
								</div>
							</div>
						</div>
