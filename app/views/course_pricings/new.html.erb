
<div style="float:left">
	<%= render 'shared/side_menu' %>
</div>
<div class="row">
	
	<div class="span8 " style="min-height:500px;margin-top:20px;background: white;border-radius: 5px;padding: 10px;width:1050px;margin-left:155px;">
		<div style="text-align: center;width: 200px;height: 45px;float: left;
line-height: 40px;margin-left: -36px;background-image: url('../assets/ribbonr.jpg');background-size: 200px 100%; color:white;font-weight:bold;">
New Course Price
  </div>
		<div class = "hero-unit" style="border-radius:5px;margin-top:50px;">
			
			<%= simple_form_for (@coursepricing) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<table class="tableform">
				<tr><th>Course Name</th><td><% courses_array = Course.all.map { |course| [course.title, course.id] } %>
					<%= f.select(:course_id,options_for_select(courses_array))%></td></tr>
					<tr><th>Start Date</th><td>

						<%= f.input_field :start_date, :start_year => Date.today.year, :end_year => Date.today.year + 30, :order => [ :day, :month, :year], class:"date", :required => true %>
					</td></tr>
					<tr><th>End Date</th><td>
						<%= f.input_field :end_date, :start_year => Date.today.year, :end_year => Date.today.year + 30, :order => [ :day, :month, :year], class:"date" %></td></tr>
						<tr><th>Price</th><td>
							<%= f.text_field :price %></td></tr>
							<tr><th></th><td><%= f.submit "Save" ,class: "btn btn-primary" %></td></tr></table>


							<% end %>


						</div>

					</div></div>