       <tr> 
         <%= author.description %></tr></table></td></tr></table>
        <% end  %>
        <% else  %>
        <table><tr><td><%= image_tag url_for(:controller => 'registrations',:action => 'user_image', :id => author.user.id), :size => "65x65",:class=>"img-polaroid" %></td>
