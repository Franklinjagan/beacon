        <td><% if !course.comments.empty? %><%= image_tag "discussin.png", :width=>"25",:height=>"25"%><% end %></td></tr>

</table></div></div>
                       <%=link_to(course) do %>
            <div class="btn btn-large btn-success" style="float:right;margin-right:10px;">View Details</div>
     <% end %>   
             

        </div> 
      </li><%end%>
      <% end %>

</ul></div>
