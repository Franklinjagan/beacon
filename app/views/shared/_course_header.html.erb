<h2 style="font-size: 18px;font-weight: bold;color: #576b00;padding: 10px 0px;height: 30px;text-align:center;">Discover Courses</h2>
<div class="span12">
 <div class="" style="float:left;width:150px;margin-left:60px;" >
            <div class="btn-success" style="text-align:center;">Found <%=pluralize(@total_course_count,"Course")%></div>
</div>
 <div class="" style="float:right;width:150px;margin-left:60px;" >
<table cellpadding="10"><tr><td><div class="btn-group ">
  <button class="btn-success">Categories</button>
  <button class="btn-success dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
<li><%= link_to "All" + " ( #{Course.where(ispublished: 1, :isconcluded=>false).all.size} )", courses_path %></li>


          <% @topics.each do |topic| %>   
          <% @topicStructure = topic.name + " ( #{ topic.courses.where(ispublished: 1, :isconcluded=>false).size} )" %>

          <li><%= link_to @topicStructure, topic %></li>
          <%end%>    
  </ul>
</div></td><td>
<div class="btn-group">
  <button class="btn-success">Sort</button>
  <button class="btn-success dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
<li><%= link_to "Date" + " ( #{Course.where(ispublished: 1,:isconcluded=>false).order(:created_at).size} )", datewise_courses_path %></li>
           <li><%= link_to "Upcoming" + " ( #{Course.where(ispublished: 0, :isconcluded=>false).all.size} )", upcomming_courses_path %></li>
           <li><%= link_to "Popularity" + " ( #{Course.where(ispopular: 1,ispublished: 1, :isconcluded=>false).size} )", popular_courses_path %></li>
           <li><%= link_to "Subscribed"+ " ( #{StudentCourse.where(:status =>"enroll").map(&:course_id).uniq.size} )", subscribed_courses_path %></li> 
           <li><%= link_to "Default" + " ( #{Course.where(ispublished: 1,:isconcluded=>false).size} )", courses_path %></li>
           
  </ul>
</div></td></tr></table>
</div>
</div>
