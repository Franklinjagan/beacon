<div style="float:left">
	<%= render 'shared/side_menu' %>
</div>

<div class="row">
	<div class="span12" style="min-height:600px;margin-top:20px;background: white;border-radius: 5px;padding: 10px;width:1050px;margin-left:155px;">
		<div style="text-align: center;width: 200px;height: 45px;float: left;
line-height: 40px;margin-left: -36px;background-image: url('../../assets/ribbonr.jpg');background-size: 200px 100%; color:white;font-weight:bold;">
Course Conclude  </div>
		<div class = "hero-unit" marigin-top:"50px">

			<%= form_tag "/concluded_course_update", :method=>'put' do %>
			<div class="divrow">
				<div>
				
				</div>
				<div class="divleft">
					<label>Course Name</label>
				</div>
				<div class="divright">

					<%= select_tag :search, options_from_collection_for_select(Course.where("isconcluded!=?","t"), "id", "title") , {:prompt => 'ALL'} %>
				</div>
			</div>
			<div class="divrow">
				<div class="divleft">
					<label>Concluded</label>

				</div>
				
				<div class="divright">
					<%= check_box_tag :isconcluded %>
				</div>
			</div>

			<div class="divrow">
				<div class="divleft">
					<label>Concluded Review </label>
				</div>
				<div class="divright">
					<%= text_area_tag :concluded_review %>
				</div>
<%= hidden_field_tag :id %>
			</div>
			<div class="divrow">
				<div class="divleft">
					&nbsp;
				</div>
				<div class="divright">
					<%= submit_tag "Save",class:"btn btn-primary",:data => { :confirm => "Are you sure?" } %>
				</div>
			</div>

			<br>

			<% end %>
		</div>
	</div>

</div>