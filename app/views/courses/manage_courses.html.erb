<div style="float:left">
  <%= render 'shared/side_menu' %>
</div>


<div >

 <div class="tblcontainer">

      <%- model_class = Course -%>
      

        <% @courses.each do |course| %>
        <div class="tbl">

          <div>

<%= image_tag url_for(:action => 'show_image', :id => course.id), :size => "60x60" %>

            <%= if course.data !=nil 
              image_tag url_for(:action => 'show_image', :id => course.id), :size => "40x40" end %>
            </div>

            <div><%= course.topic.name %></div>

            <div><%= link_to course.title, course_path(course) %></div>

            <div><%= course.author %></div>

            <div><%=l course.created_at, :format=>'%d %b. %Y %I:%M' %></div>

            <div>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_course_path(course), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              course_path(course),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-mini btn-danger' %>
            </div>

          </div>
       

     
    
 <% end %>


</div>

<div class='apple_pagination' align="center"><%= will_paginate @courses, :container => false  %> </div>


