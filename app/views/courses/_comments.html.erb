<% if !@comments.blank?%>
        <% @comments.each do |comment| %>
      <div class="row" style="float:left;margin:0px auto;">
        <div class="span6" style="margin-bottom:10px;float:left;">
          <div class="reviewer" style="width:50px;float:left;">

        <% if comment.user.image_blob == nil %>
                <% if comment.user.omni_image_url == nil %>
                <%= gravatar_for_with_size comment.user, "50x50" %>
                <% else  %>
                <%= image_tag(comment.user.omni_image_url,size: "50x50", alt: "")%> 
                <% end  %>
                <% else  %>
                  <%= image_tag url_for(:controller => 'registrations',:action => 'user_image', :id => comment.user.id), :size => "50x50" %>
                <% end  %>
          </div>
          <div class="bubble-content">
            <div class="point"></div>
              <h6 style="font-weight:bold"><%= comment.user.name  %> </h6>             
              <%= comment.comment  %>
          </div>
          <div class="container clearfix"></div>
        </div>
      </div>
       <%end%> 

  <%end%>