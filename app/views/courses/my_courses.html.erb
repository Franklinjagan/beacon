          <div class="mod_pen_bottom"><%=link_to(course) do %>
            <div class="mod_view">View Details</div>
            <% end %>  </div>
        </div>
      </li><% end %></ul></div>
                  </div>          
                  
                </div>
              </div>
            </div>
         </div>
          </div>
