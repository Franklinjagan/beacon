<style type="text/css">
.tableform
{
  width: 500px;

}
.tableform th
{
  width:200px;
  font-weight: normal;
  text-align: left;
font-size: 14px;

}
.tableform tr
{

}

.tableform td
{
  width:300px;

}
.samplehint {
  clear: left;
  
  font-size: 11px;
  color: maroon;
  display: inline;
  font-style: italic;
}
.date{
width:80px;
}


</style>

<% if flash[:coupon_notice] %>
<div id="coupon_notice" class="notice">
  <%= flash[:coupon_notice]%>
</div>
<% end %>

<% if flash[:coupon_error] %>
<div id="coupon_error" class="error">
  <%= flash[:coupon_error]%>
</div>
<% end %>

<div class="row">
  <div class="span10 ">



<div class = "hero-unit" style="border:1px solid #0088cc;border-radius:5px;">
  <h3 align="center">New Coupons </h3>
<%= simple_form_for @coupon do |f| %>

<%= render 'shared/error_messages', object: f.object %>
<table class="tableform">
  <tr><th>For all course</th><td>
    <div><%= f.input_field :course_check_box,:as=>:boolean,:input_html => { :check => @coupon.course_check_box }  %>
    </div></td></tr>

    <tr><th></th><td> <div id='select_box' style='display:none;'> Coupon For
      <%= f.input_field :coupon_obj, :as=>:select,:collection => [['Course','Course'], ['Student','Student']], :prompt => "Choose a option" %>
    </div></td></tr>

    <tr><th></th><td><div id='all_course' style='display:none;'>
      <%= f.input_field :coupon_obj_id, :as=>:select, :collection => Course.all %>
    </div></td></tr>
    <tr><th></th><td><div id='student_email' style='display:none;'>
      <%= f.input_field :coupon_obj_email ,:label => 'Student email' %>
    </div></td></tr>
  </div>
  <tr><th>  
    How many? </th><td>
    
    <%= text_field_tag :how_many, 1 %>

  </td></tr>


  <tr><th>
   Coupon Name
  </th><td>
  
  <%= f.input_field :name  %></td></tr>
  <tr><th>
    Number of times redeemable
  </th>
  <td><%= f.input :how_many,label: false %></td></tr>
  <tr><th>
    Description</th><td>
    <%= f.input_field :description,label: false %></td></tr>
    <tr><th> Alpha mask</th><td>
      <%= f.input_field :alpha_mask,label: false  %></td></tr>
      <tr><th></th><td class="hint">  ["e.g., AA-AA-AA"]</td></tr>
      <tr><th>Digit mask</th><td>
        <%= f.input_field :digit_mask,label: false  %></td></tr>
        <tr><th></th><td class="hint">  ["e.g., 11-11-11"]</td></tr>
        <tr><th> Course</th><td>
          <%= f.input_field :category_one,label: false   %></td></tr>
          <tr><th></th><td class="hint">["e.g., course"]  
            <tr><th>Amount off Course</th><td>
              <%= f.input :amount_one ,label: false %></td></tr>
              <tr><th></th><td class="hint"> "hint:Amount off Course" 
                <tr><th>Percentage of course</th><td>
                  <%= f.input :percentage_one,label: false  %></td></tr>
                  <tr><th></th><td class="hint"> "hint:Amount off, in percentage course" 
                    <tr><th>Servise Tax</th><td>
                      <%= f.input :category_two,label: false  %></td></tr>
                      <tr><th></th><td class="hint"> ["e.g., Tax"] </td></tr>
                      <tr><th>Amount off Sevice Tax</th><td>
                        <%= f.input :amount_two,label: false  %></td></tr><tr><th></th>
                        <td class="hint">"hint:Amount off Service Tax"</td></tr>
                        <tr><th>Percentage off Service Tax</th><td>
                         <%= f.input :percentage_two,label: false %></td></tr></td></tr>
                         <tr><th></th><td class="hint"> "hint:Amount off, in percent service tax" </td></tr>



                         <tr><th>Expires</th><td>
                          <%= f.input_field :expiration, :start_year => Date.today.year, :end_year => Date.today.year + 30, class:"date" %></td></tr>
                          <tr><th></th><td> <%= f.button :submit ,class:"btn btn-primary" %></td></tr></table>



                          <% end %>
                        </div>

                          <script>
                          $('#coupon_course_check_box').click(function(){
                            if($('#coupon_course_check_box').is(':checked')){
                              $("#select_box").hide();
                              $('#all_course').hide();
                              $('#student_email').hide();
                            } else {
                             $("#select_box").show();
                           }
                         })

                          $('#coupon_coupon_obj').click(function(){
                           var v = $('#coupon_coupon_obj').val();

                           if(v=="Course"){
                            $('#all_course').show();
                            $('#student_email').hide();
                          }
                          else if( v=="Student"){
                           $('#student_email').show();
                           $('#all_course').hide();
                         }
                         else{
                          $('#all_course').hide();
                          $('#student_email').hide();
                        }

                      });




                          </script>
</div>
</div>